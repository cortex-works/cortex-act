{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ]
        },
        {
            "name": "Attach to Extension Host",
            "type": "node",
            "request": "attach",
            "port": 5870,
            "restart": true,
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ]
        }
    ]
}
